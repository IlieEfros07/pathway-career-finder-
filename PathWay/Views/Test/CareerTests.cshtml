@{
    ViewData["Title"] = "Career Tests";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800"><i class="fas fa-clipboard-list me-2"></i>Career Assessments</h1>
</div>

<div class="row">
    <div class="col-md-6 mb-4">
        <div class="card shadow h-100">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fas fa-star me-2"></i>Skills Assessment</h5>
            </div>
            <div class="card-body">
                <p>Evaluate your technical and professional skills</p>
                <div class="progress mb-3">
                    <div class="progress-bar" role="progressbar" style="width: 45%">45% Complete</div>
                </div>
                <a href="#" class="btn btn-outline-primary"><i class="fas fa-play me-2"></i>Continue Test</a>
            </div>
        </div>
    </div>

    <div class="col-md-6 mb-4">
        <div class="card shadow h-100">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="fas fa-heart me-2"></i>Interest Inventory</h5>
            </div>
            <div class="card-body">
                <p>Discover careers that match your interests</p>
                <a href="#" class="btn btn-success"><i class="fas fa-plus me-2"></i>Start Test</a>
            </div>
        </div>
    </div>
</div>