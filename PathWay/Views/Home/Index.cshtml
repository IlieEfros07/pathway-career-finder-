@{
    ViewData["Title"] = "Find Your Perfect Career Path";
}

<section class="hero">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold">Discover Your Ideal Career Path</h1>
                <p class="lead mb-4">
                    Take our scientifically validated assessments and get personalized career recommendations that match your skills, interests, and personality.
                </p>
                <div class="d-grid gap-2 d-md-flex justify-content-md-start mb-4">
                    <a asp-controller="Test" asp-action="Index" class="btn btn-primary btn-lg px-4 me-md-2">Take Assessment</a>
                    <a asp-controller="Career" asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">Browse Careers</a>
                </div>
            </div>
            <div class="col-lg-6">
                <img src="/api/placeholder/600/400" alt="Career Path" class="img-fluid rounded">
            </div>
        </div>
    </div>
</section>

<section class="py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold">How It Works</h2>
            <p class="lead text-muted">Your journey to finding the perfect career starts here</p>
        </div>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-primary bg-gradient text-white mb-3">
                            <i class="fas fa-clipboard-list fa-2x"></i>
                        </div>
                        <h3 class="h4">Take Assessments</h3>
                        <p class="text-muted">Complete our comprehensive assessments to discover your unique skills, interests, and values.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-success bg-gradient text-white mb-3">
                            <i class="fas fa-lightbulb fa-2x"></i>
                        </div>
                        <h3 class="h4">Get Matched</h3>
                        <p class="text-muted">Receive personalized career recommendations based on your assessment results.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-info bg-gradient text-white mb-3">
                            <i class="fas fa-map-signs fa-2x"></i>
                        </div>
                        <h3 class="h4">Plan Your Path</h3>
                        <p class="text-muted">Explore educational requirements and career pathways to achieve your goals.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-4 mb-lg-0">
                <img src="/api/placeholder/600/400" alt="Career Guidance" class="img-fluid rounded">
            </div>
            <div class="col-lg-6">
                <h2 class="fw-bold mb-3">Expert Career Guidance</h2>
                <p class="lead">
                    Connect with certified career counselors who can help you navigate your professional journey.
                </p>
                <p class="mb-4">
                    Our team of experienced professionals provides personalized guidance to help you make informed decisions about your career path.
                </p>
                <a asp-controller="Session" asp-action="Book" class="btn btn-primary">Book a Session</a>
            </div>
        </div>
    </div>
</section>

@section Styles {
    <style>
        .hero {
            padding: 5rem 0;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        }

        .feature-icon {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 64px;
            height: 64px;
            border-radius: 50%;
        }
    </style>
}