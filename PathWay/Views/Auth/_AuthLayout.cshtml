<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PathWay</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        :root {
            --primary: #4e73df;
            --primary-dark: #224abe;
            --success: #1cc88a;
            --danger: #e74a3b;
        }

        body {
            background-color: #f8f9fa;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .auth-wrapper {
            flex: 1;
            display: flex;
            align-items: center;
            padding: 2rem 0;
        }

        .auth-container {
            width: 100%;
            max-width: 500px;
            margin: auto;
        }

        .auth-card {
            border-radius: 12px;
            border: none;
            box-shadow: 0 6px 18px rgba(0,0,0,.1);
            display: flex;
            flex-direction: column;
            min-height: 600px;
        }

        .auth-header {
            background: linear-gradient(to right, var(--primary), var(--primary-dark));
            padding: 2rem;
            text-align: center;
            color: white;
        }

        .brand-logo {
            width: 70px;
            height: 70px;
            background-color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1rem;
            box-shadow: 0 4px 8px rgba(0,0,0,.2);
        }

            .brand-logo i {
                font-size: 2rem;
                color: var(--primary);
            }

        .auth-body {
            flex: 1;
            padding: 2rem;
        }

        .auth-footer {
            margin-top: auto;
            background-color: #f8f9fa;
            border-top: 1px solid #eaeaea;
            padding: 1.5rem;
            text-align: center;
        }

        .input-group-text {
            background-color: #f8f9fa;
            border-right: none;
        }

        .form-control {
            border-left: none;
        }

            .form-control:focus {
                box-shadow: none;
                border-color: #ced4da;
            }

        .btn-primary {
            background-color: var(--primary);
            border-color: var(--primary);
            padding: 0.75rem 1.5rem;
            font-weight: 500;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background-color: var(--primary-dark);
                border-color: var(--primary-dark);
            }

        .password-strength {
            height: 5px;
            border-radius: 2px;
            margin-top: 5px;
            transition: all 0.3s ease;
        }

        @@media (max-width: 576px) {
            .auth-wrapper {
                padding: 1rem;
            }

            .auth-card {
                min-height: auto;
                margin: 0;
            }

            .brand-logo {
                width: 50px;
                height: 50px;
            }

            .auth-header {
                padding: 1.5rem;
            }

            .auth-body {
                padding: 1.5rem;
            }
        }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="auth-wrapper">
        <div class="auth-container">
            <div class="card auth-card">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>